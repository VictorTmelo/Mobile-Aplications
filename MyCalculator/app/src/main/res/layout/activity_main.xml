<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corPreta"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/res"
        android:gravity="end"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/corBranca"
        android:textSize="50sp" />

    <Button
        android:id="@+id/nove"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/botoes"
        android:text="9"
        android:textAllCaps="true" />
    <Button
        android:id="@+id/oito"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/botoes"
        android:text="8"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/sete"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/botoes"
        android:text="7"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/seis"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="305dp"
        android:background="@drawable/botoes"
        android:text="6"
        android:textAllCaps="true" />
    <Button
        android:id="@+id/cinco"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="305dp"
        android:background="@drawable/botoes"
        android:text="5"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/quatro"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="305dp"
        android:background="@drawable/botoes"
        android:text="4"
        android:textAllCaps="true" />


        <Button
            android:id="@+id/um"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="390dp"
            android:background="@drawable/botoes"
            android:text="1"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/dois"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="390dp"
            android:background="@drawable/botoes"
            android:text="2"
            android:textAllCaps="true" />

    <Button
        android:id="@+id/tres"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="210dp"
        android:background="@drawable/botoes"
        android:text="3"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/zero"
        android:layout_width="165dp"
        android:layout_height="80dp"
        android:text="0"
        android:background="@drawable/botoes"
        android:textAllCaps="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="475dp"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="."
        android:background="@drawable/botoes"
        android:textAllCaps="true"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="475dp"/>

    <Button
        android:id="@+id/igual"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="="
        android:background="@drawable/operadores"
        android:textAllCaps="true"
        android:layout_marginLeft="295dp"
        android:layout_marginTop="475dp"/>

    <Button
        android:id="@+id/mais"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="+"
        android:background="@drawable/operadores"
        android:textAllCaps="true"
        android:layout_marginLeft="295dp"
        android:layout_marginTop="390dp"/>
    <Button
        android:id="@+id/menos"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="-"
        android:background="@drawable/operadores"
        android:textAllCaps="true"
        android:layout_marginLeft="295dp"
        android:layout_marginTop="305dp"/>
    <Button
        android:id="@+id/multi"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="x"
        android:background="@drawable/operadores"
        android:textAllCaps="true"
        android:layout_marginLeft="295dp"
        android:layout_marginTop="220dp"/>

    <Button
        android:id="@+id/reiniciar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="AC"
        android:background="@drawable/reiniciar"
        android:textAllCaps="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="135dp"/>

    <Button
        android:id="@+id/divisao"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="/"
        android:background="@drawable/operadores"
        android:textAllCaps="true"
        android:layout_marginLeft="295dp"
        android:layout_marginTop="135dp"/>

    <Button
        android:id="@+id/porcentagem"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="%"
        android:background="@drawable/reiniciar"
        android:textAllCaps="true"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="135dp"/>

    <Button
        android:id="@+id/sinal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="+/-"
        android:background="@drawable/reiniciar"
        android:textAllCaps="true"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="135dp"/>




</RelativeLayout>